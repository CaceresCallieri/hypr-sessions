{
  "manifest_version": 2,
  "name": "Hyprland Session Manager",
  "version": "1.0.0",
  "description": "Captures and restores browser tabs for Hyprland workspace sessions",
  
  "applications": {
    "gecko": {
      "id": "hypr-sessions@localhost"
    }
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "nativeMessaging",
    "downloads"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "browser_action": {
    "default_title": "Hyprland Session Manager",
    "default_popup": "popup.html"
  }
}